<div class="row">
		<% @usertrait.each do |n| %>
			<div class ="large-4 columns" id="trait_list">
				<%= link_to "#{n.name} #{Trait.find(n.id).trait_user.first(:conditions => ["trait_id = #{n.id} AND user_id = #{current_user.id}"]).counter} Times" , counter_index_path(:trait_id => n), method: :POST %>
			</div>
	<% end %>
</div>

<br>
<br>
<div class= "row">
	<div class ="large-6 columns trait_box">
		<%= form_for :trait, :url=>traits_path, :method=> :POST, html: {id: "add_trait_form"} do |f| %>
		  Add a Trait: <%= f.text_field :name, :placeholder => "Add something you do here!", class:"form_text_field" %>
		<%= f.submit 'Add it!', class: "button prefix", id: "formid" %>
		<% end %>
	</div>
	<div class ="large-6 columns trait_box">
		<%= form_for :trait, :url=>traits_path, :method=> :DELETE, html: {id: "add_trait_form"} do |f| %>
		  <p id="delete_a_trait">Delete a Trait:</p> <%= f.text_field :name, :placeholder => "but mommy... i don't do that anymore!", class:"form_text_field" %>
		<%= f.submit 'disappear!', class: "button prefix", id: "formid" %>
		<% end %>
	</div>
</div>